{
	"name" : "are you commit today?",
	"description" : "extension check your commit today",
	"version" : "1.2",
	"manifest_version": 2,
	"browser_action": {
		"default_icon": "icons/github-danger.png"
	},
	"background" : {
		"scripts" : ["js/jquery.min.js", "js/background.js"]
	},
	"icons": { "16":"icons/github-danger.png", "128": "icons/github-main.png" },
	"options_ui": {
	    "page": "options.html",
	    "chrome_style": true
	},
	"permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "chrome://favicon/",
        "storage"
    ]
}